      "config": {
        "taskName": "Do not allow PRs to be merged into main",
        "eventType": "pull_request",
        "eventNames": ["pull_request", "issues", "project_card"],
        "conditions": {
          "operator": "and",
          "operands": [
            {
              "name": "isAction",
              "parameters": {
                "action": "opened"
