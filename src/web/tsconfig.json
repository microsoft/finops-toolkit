{
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"], // Include Jest types
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx", // or "react" for older versions of React
    "module": "commonjs",
    "moduleResolution": "node",
  },
  "include": ["src"],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
}